{
  "extends": "@tsconfig/react-native/tsconfig.json",
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": "./",
    "paths": {
      "@components/*": ["src/components/*"],
      "@assets/*": ["src/assets/*"],
      "@utils/*": ["src/utils/*"],
      "@screens": ["src/screens"]
    },
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react",
    "lib": ["es6"],
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "target": "esnext",
    "types": [
      "jest",
      "styled-components",
      "@types/styled-components",
      "@types/styled-components-react-native",
      "react",
      "react-native"
    ]
  },
  "exclude": ["node_modules", "jest.config.js"],
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "./src/**/*",
    "./declarations.d.ts",
    ".eslintrc.js",
    "./App.tsx",
    "./babel.config.js",
    "./index.js",
    "./metro.config.ts",
    "./services.js",
    "./env.d.ts"
  ]
}
